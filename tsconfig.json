// tsconfig.json (at your project root)
{
	"compilerOptions": {
	  "target": "ES2020",
	  "module": "NodeNext",
	  "moduleResolution": "NodeNext",
	  "rootDir": "./backend/src",       // all your source lives here
	  "outDir": "./backend/dist",       // compiled JS goes here
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true
	},
	"ts-node": {
	  "esm": true
	},
	"include": [
	  "backend/src/**/*",               // your .ts source
	  "backend/src/types/**/*.d.ts"     // your custom type declarations
	],
	"exclude": [
	  "node_modules",
	  "**/*.spec.ts",
	  "frontend"
	]
  }
  